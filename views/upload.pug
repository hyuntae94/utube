extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post", enctype="multipart/form-data")
            label(for="file") Video File
            input(type="file", id="file", name="videoFile",required ="true")
            input(type="text",placeholder="Title", name="title",required ="true",accept="video/*" )
            textarea(name="description", placerholder="Description",required ="true")
            input(type="submit", value="Upload Video")